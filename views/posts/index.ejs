<h1>Posts Index Page</h1>

<a href="/posts/new">Create New Post</a>
<br /><br /><br />

<% posts.forEach(post=> { %>
    <a href="posts/<%= post.id %>">
        <div>
            <% post.images.forEach((img)=> { %>
                <img src="<%= img.url %>" alt="Image" width="100" height="100" />
                <% }) %>

                    <h1>
                        <%= post.title %>
                    </h1>

                    <h2>Price: <%= post.price %>
                    </h2>

                    <h2>
                        <%= post.location %>
                    </h2>

                    <div>
                        <%= post.desc %>
                    </div>
        </div>
    </a>

    <a href="/posts/<%= post.id %>">Show</a>
    <br /><br /><br /><br /><br />
<% }); %>